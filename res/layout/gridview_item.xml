<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:gravity="center_horizontal">
    
    <LinearLayout 
        android:layout_width="@dimen/gv_item_width"
        android:layout_height="@dimen/gv_item_height"
        android:padding="2dp"
        android:background="@drawable/video_item">
    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/iv_item_icon"
        android:background="@null"/>
    </LinearLayout>
    
    <TextView 
        android:id="@+id/tv_item_name"
        android:layout_width="@dimen/gv_item_text_name"
        android:layout_height="wrap_content"
        android:text="@string/type_music"
        android:textColor="#F5CB49"
        android:gravity="center"
        android:textSize="14sp"
        android:singleLine="true"
        android:ellipsize="end"/>
    
    <TextView 
        android:id="@+id/tv_item_time"
        android:layout_width="@dimen/gv_item_width"
        android:layout_height="wrap_content"
        android:text="@string/file_add_time"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:gravity="center"
      	android:singleLine="true"
        android:ellipsize="end"/>
    

</LinearLayout>
