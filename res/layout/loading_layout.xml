<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/loading_bg_padding_left"
        android:paddingRight="@dimen/loading_bg_padding_left"
        android:paddingTop="@dimen/loading_bg_padding_top"
        android:paddingBottom="@dimen/loading_bg_padding_top"
        android:orientation="horizontal" 
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:background="@drawable/toast_bg">
        <ProgressBar 
            style="@style/loadingProgressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateDuration="700" />
        
        <TextView
            android:id="@+id/tv_scanner_loading" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/on_scanner"
            android:textColor="#98D3ED"
            android:textSize="20sp"
            android:layout_marginLeft="@dimen/loading_layout_text_margin_left"/>
    </LinearLayout>

</RelativeLayout>
